<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/layout_amount"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/_1000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/listLayoutTwoThousand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TwoThousandNote : 2"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/layoutListFiveHundred"
            app:layout_constraintStart_toEndOf="@id/layout_amount"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />


        <TextView
            android:id="@+id/layoutListFiveHundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TwoThousandNote : 2"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/layoutListOneHundred"
            app:layout_constraintEnd_toEndOf="@+id/listLayoutTwoThousand"
            app:layout_constraintStart_toStartOf="@+id/listLayoutTwoThousand"
            app:layout_constraintTop_toBottomOf="@+id/listLayoutTwoThousand" />

        <TextView
            android:id="@+id/layoutListOneHundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TwoThousandNote : 2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layoutListFiveHundred"
            app:layout_constraintStart_toStartOf="@+id/layoutListFiveHundred"
            app:layout_constraintTop_toBottomOf="@+id/layoutListFiveHundred" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>